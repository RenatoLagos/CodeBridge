---
const FEATURES = [
    {
        icon: "BP",
        title: "Blue Prism to Power Automate",
        description: "Convert Blue Prism automation to Microsoft Power Automate flows for seamless integration with your Microsoft ecosystem."
    },
    {
        icon: "BP",
        title: "Blue Prism to Python Code",
        description: "Turn your Blue Prism automations into Python scripts with full functionality and improved performance."
    },
    {
        icon: "UI",
        title: "UiPath to Power Automate",
        description: "Convert UiPath automations to Microsoft Power Automate flows for seamless integration with your Microsoft ecosystem."
    },
    {
        icon: "UI",
        title: "UiPath to Python Code",
        description: "Turn your UiPath automations into Python scripts with full functionality and improved performance."
    }
] as const
---

<section id="features" class="features-section">
    <div class="conversion-paths">
        {
            FEATURES.map(({icon, title, description}) => (
                <div class="conversion-card">
                    <div class="conversion-icon">{icon}</div>
                    <h3 class="conversion-title">{title}</h3>
                    <p>
                        {description}
                    </p>
                </div>
            ))
        }
    </div>
</section>

<style>
    .features-section {
        margin: 0 auto;
        padding: 8px 16px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--primary-bg);
    }

    .conversion-paths {
        display: grid;
        padding: 0 3rem;
        grid-template-columns: repeat(4, minmax(240px, 1fr));
        gap: 2rem;
        margin: 3rem 0;
    }

    .conversion-card {
        background-color: var(--text-light);
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--gray-light);
    }

    .conversion-card:hover {
        transition: transform 0.3s, box-shadow 0.3s;
        transform: translateY(-5px);
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }

    .conversion-icon {
        width: 48px;
        height: 48px;
        background-color: var(--gray-light);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-dark);
    }

    .conversion-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
</style>
